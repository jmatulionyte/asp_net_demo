@model List<List<string>>
@if (Model.Count != 0)
{
    <table class="table table-bordered table-striped bg-dark" style="width:30%; margin: 0 30px 0 0; border: 0 0 0 0">
        <thead>
            <tr>
                <th>
                    Nr
                </th>
                <th>
                    Player 1
                </th>
                <th>
                    Player 2
                </th>
                <th>
                    Result
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
            }
            @foreach (var groupPlayer in Model)
                {
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @groupPlayer[0]
                    </td>
                    <td>
                        @groupPlayer[1]
                    </td>
                    <td>
                        0:0
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Group" asp-action="Edit">
                            Edit Result
                        </a>
                        @*<a class="btn btn-primary mx-2" asp-controller="Player" asp-action="Edit" asp-route-id="@groupPlayer"><i class="bi bi-pen"></i> Edit</a>*@

                    </td>
                </tr>
                    counter++;
                }
        </tbody>
    </table>
}
