@model List<Group>

@if (Model.Count != 0)
{
    <table class="table table-bordered table-striped bg-dark" style="width:30%; margin: 0 30px 0 0; border: 0 0 0 0">
        <thead>
            <tr>
                <th>
                    Nr
                </th>
                <th>
                    Player 1
                </th>
                <th>
                    Player 2
                </th>
                <th>
                    Result
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
            }
            @foreach (var groupPlayer in Model)
                {
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @groupPlayer.Player1
                    </td>
                    <td>
                        @groupPlayer.Player2
                    </td>
                    <td>
                        @groupPlayer.Player1Result : @groupPlayer.Player2Result
                    </td>
                    <td>
                        <a class="btn btn-primary mx-2" asp-controller="Group" asp-action="Edit" asp-route-id="@groupPlayer.Id">
                            <i class="bi bi-pen"></i> Edit Result
                        </a>
                    </td>
                </tr>
                    counter++;
                }
        </tbody>
    </table>
}
