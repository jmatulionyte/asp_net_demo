@model List<Match>

@if (Model.Count != 0)
{
    <table class="table table-striped bg-dark" style="width:50%; margin: 0 20px 0 0; border: 0 0 0 0">
        <thead>
            <tr>
                <th>
                    Nr
                </th>
                <th>
                    Player 1
                </th>
                <th>
                    Player 2
                </th>
                <th>
                    Result
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 1;
            }
            @foreach (var groupPlayer in Model)
            {
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @groupPlayer.Player1
                    </td>
                    <td>
                        @groupPlayer.Player2
                    </td>
                    <td>
                        @groupPlayer.Player1Result : @groupPlayer.Player2Result
                    </td>
                    <td>
                        @if (@groupPlayer.Player1.Length == 2 || @groupPlayer.Player2.Length == 2
                        || @groupPlayer.Player1.Contains(" of ") || @groupPlayer.Player2.Contains(" of "))
                        {
                        <button class="btn btn-secondary mx-2" style="background-color: #D0D0D0 " disabled>
                            Edit Result
                        </button>
                        }
                        else
                        {
                        <a class="btn btn-primary mx-2" asp-controller="PlayoffMatch" asp-action="Edit" asp-route-id="@groupPlayer.Id">
                            Edit Result
                        </a>
                        }

                    </td>
                </tr>
                counter++;
            }
        </tbody>
    </table>
}
