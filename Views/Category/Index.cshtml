@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Tournament list
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New Tournament</a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped bg-dark" style="width:100%">
        <thead>
            <tr>
                <th>
                    Tournament Name
                </th>
                <th>
                    1st Attendee
                </th>
                <th>
                    2nd Attendee
                </th>
                <th>
                    Tournament Date/Time
                </th>
                <th>
                    Results
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Name
                    </td>
                    <td width="20%">
                        @obj.AttendeeFirst
                    </td>
                    <td width="20%">
                        @obj.AttendeeSecond
                    </td>
                    <td width="20%">
                        @obj.TournamentDateTime
                    </td>
                    <td width="20%">
                        @obj.Result
                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pen"></i> Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-file-x"></i> Delete</a>

                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

