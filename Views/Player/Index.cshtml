@model IEnumerable<Player>
@{
    ViewData["Title"] = "Player";
}


<div class="container p-3">
    <div class="row pt-2">
        <div class="col-6">
            <h2 class="text-primary">
                Players list
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Player" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Tournament Player
            </a>
        </div>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        <p>
            Find by name: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
    <table class="table table-bordered table-striped bg-dark" style="width:100%">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th>
                    Enrolled To Tournament
                </th>
                <th>
                    @Html.ActionLink("Wins", "Index", new { sortOrder = ViewBag.WinsSortParm })
                </th>
                <th>
                    @Html.ActionLink("Losses", "Index", new { sortOrder = ViewBag.LossesSortParm })
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.FirstName
                    </td>
                    <td>
                        @obj.LastName
                    </td>
                    <td>
                        @obj.EnrolledToTournament
                    </td>
                    <td>
                        @obj.Wins
                    </td>
                    <td>
                        @obj.Losses
                    </td>
                    <td width="20%">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="Player" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pen"></i> Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="Player" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-file-x"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

