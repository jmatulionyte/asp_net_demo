@model Match
<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Edit Result
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Player1"></label>
            <input asp-for="Player1" class="form-control" readonly />
            <span asp-validation-for="Player1" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Player2"></label>
            <input asp-for="Player2" class="form-control" readonly />
            <span asp-validation-for="Player2" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Player1Result"></label>
            <input asp-for="Player1Result" class="form-control" />
            <span asp-validation-for="Player1Result" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Player2Result"></label>
            <input asp-for="Player2Result" class="form-control" />
            <span asp-validation-for="Player2Result" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="GroupName"></label>
            <input asp-for="GroupName" class="form-control" readonly />
            <span asp-validation-for="GroupName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update Result</button>
        <a asp-controller="Group" asp-action="Index" class="btn btn-primary" style="width:150px">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/> //validation for client side if empty fields
    }
}
